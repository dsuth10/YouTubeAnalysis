# YouTube Data API Key (Get from Google Cloud Console)
YOUTUBE_API_KEY=your_youtube_api_key_here

# OpenRouter API Key (Get from https://openrouter.ai/)
OPENROUTER_API_KEY=your_openrouter_api_key_here

# Optional: Apify API Key for transcript fallback
APIFY_API_KEY=your_apify_api_key_here

# Notion API Integration Token (Get from https://www.notion.so/my-integrations)
NOTION_TOKEN=your_notion_integration_token_here

# Notion Database ID (Optional - can be set via UI)
NOTION_DATABASE_ID=your_notion_database_id_here

# Server Configuration
PORT=3000

# =========================
# yt-dlp Configuration
# =========================

# Absolute path to yt-dlp executable (leave empty to use from PATH)
# Examples:
#   /usr/local/bin/yt-dlp
#   C:\\Tools\\yt-dlp.exe
YT_DLP_PATH=

# Cookie source for yt-dlp requests
# Use one of:
#   browser:edge   (Windows default)
#   browser:chrome
#   file:/path/to/cookies.txt (Netscape format)
YT_DLP_COOKIES=browser:edge

# Preferred subtitle languages for yt-dlp (regex supported)
# Example: en.*,en will match en-US, en-GB, etc.
YT_DLP_SUB_LANGS=en.*,en

# Preferred subtitle formats for yt-dlp (ordered by preference)
# Supported: vtt, srt, best
YT_DLP_SUB_FORMATS=vtt/srt/best

# Optional custom User-Agent for yt-dlp HTTP requests
YT_DLP_USER_AGENT=

# =========================
# ASR (Automatic Speech Recognition)
# =========================

# Provider to use for ASR fallback when subtitles are not available
# Options: openai | assemblyai | deepgram
TRANSCRIBE_PROVIDER=openai

# OpenAI Whisper configuration
OPENAI_API_KEY=
# Whisper model id (default: whisper-1)
OPENAI_WHISPER_MODEL=whisper-1

# AssemblyAI configuration (optional)
ASSEMBLYAI_API_KEY=

# Deepgram configuration (optional)
DEEPGRAM_API_KEY=